---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
  <div class="icon-row">
    <div class="icon">
      <img src="icon1.png" alt="Icon 1" />
      <span class="icon-text">Processing</span>
    </div>
    <div class="icon">
      <img src="icon2.png" alt="Icon 2" />
      <span class="icon-text">Processing Foundation</span>
    </div>
    <div class="icon">
      <img src="icon3.png" alt="Icon 3" />
      <span class="icon-text">p5.js</span>
    </div>
    <div class="icon">
      <img src="icon4.png" alt="Icon 4" />
      <span class="icon-text">Processing Android</span>
    </div>
    <div class="icon">
      <img src="icon5.png" alt="Icon 5" />
      <span class="icon-text">Processing Python</span>
    </div>
    <!-- Agrega más imágenes de iconos aquí -->
  </div>
  
  <header class="custom-header">
    <div class="logo">Logo</div>
    <nav class="menu">
      <a href="#">Home</a>
      <a href="#">Products</a>
      <a href="#">Blog</a>
      <a href="#">About Us</a>
      <a href="#">Contact</a>
    </nav>
    <div class="search-bar">
      <input type="text" placeholder="Search" />
      <img src="search-icon.png" alt="Search Icon" />
    </div>
  </header>
  
  <!-- Rest of your content -->
</Layout>

<style>
  /* Estilos para la fila de iconos */
  .icon-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: #f0f0f0;
  }

  .icon-row img {
    width: 24px;
    height: 24px;
  }

  .icon-text {
    font-size: 14px;
    color: #333;
  }

  /* Estilos para el header personalizado */
  .custom-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background-color: #333;
    color: white;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .menu {
    display: flex;
    gap: 1rem;
  }

  .menu a {
    color: white;
    text-decoration: none;
  }

  .search-bar {
    display: flex;
    align-items: center;
    background-color: #555;
    padding: 0.5rem;
    border-radius: 4px;
  }

  .search-bar input {
    border: none;
    background-color: transparent;
    color: white;
    margin-right: 0.5rem;
  }

  .search-bar img {
    width: 16px;
    height: 16px;
  }
</style>